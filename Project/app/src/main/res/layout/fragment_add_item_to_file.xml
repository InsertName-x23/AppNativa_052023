<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#FFFBF5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:elevation="20dp"

        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/editTextTextName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_imputs_desing"
            android:hint="Name"
            android:inputType="text"
            android:radius="200dp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/editTextTextDate"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_imputs_desing"
            android:hint="Date"
            android:inputType="date"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/editTextTextAmount"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_imputs_desing"
            android:hint="Amount"
            android:inputType="number"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/editTextTextDescripcion"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/text_imputs_desing"
            android:hint="Descripcion"
            android:inputType="text"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttons_menus_desing"
            android:text="Add"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/buttons_menus_desing"
            android:text="Cancel"
            android:textColor="@android:color/black" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>